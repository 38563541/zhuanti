<launch>
    <!-- Load the common parameters -->
    <rosparam file="$(find navigation)/params/common_params.yaml" command="load"/>

    <!-- Load the move_base parameters -->
    <rosparam file="$(find navigation)/params/move_base_params.yaml" command="load"/>

    <!-- Load the local costmap parameters -->
    <rosparam file="$(find navigation)/params/local_costmap_params.yaml" command="load" ns="local_costmap"/>

    <!-- Load the global costmap parameters -->
    <rosparam file="$(find navigation)/params/global_costmap_params.yaml" command="load" ns="global_costmap"/>

    <!-- Load the base local planner parameters -->
    <rosparam file="$(find navigation)/params/base_local_planner_params.yaml" command="load" ns="DWAPlannerROS"/>

    <!-- Run move_base -->
    <node pkg="move_base" type="move_base" name="move_base" respawn="true" output="screen">
        <!-- Remappings if necessary -->
    </node>
</launch>